<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.booknow">

    <application
        android:allowBackup="true"
        android:label="Book Now"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity
            android:name=".LoginActivity"
            android:exported="false"/>

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GeneroActivity" android:exported="false"/>
        <activity android:name=".ListaLivrosActivity" android:exported="false"/>
        <activity android:name=".DetalheLivroActivity" android:exported="false"/>



    </application>

</manifest>
