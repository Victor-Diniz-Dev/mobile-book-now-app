<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Escolha o Gênero"
            android:textSize="24sp"
            android:textColor="#00FF99"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnFiccao"
            android:text="Ficção"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnComedia"
            android:text="Comédia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnBiografia"
            android:text="Biografia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnSuspense"
            android:text="Suspense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRomance"
            android:text="Romance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAcao"
            android:text="Ação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnHq"
            android:text="HQs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnCientifico"
            android:text="Científico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF99"
            android:textColor="#000000"/>

    </LinearLayout>
</ScrollView>
